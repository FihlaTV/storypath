<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/clip_thumb_height"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/clip_thumb_height"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/clipLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_xlarge"
        android:paddingRight="@dimen/padding_xlarge"
        android:layout_marginTop="@dimen/padding_small"
        android:layout_below="@id/textureView"
        android:textSize="@dimen/text_large"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/clipStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:layout_marginTop="@dimen/padding_small"
        android:layout_below="@id/clipLength"
        android:text="0:00"
        android:textSize="@dimen/text_medium"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/clipEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:layout_marginTop="@dimen/padding_medium"
        android:layout_below="@id/clipLength"
        android:textSize="@dimen/text_medium"
        android:fontFamily="sans-serif-light"/>

    <!-- TODO: Move RangeSeekBar to liger -->
    <SeekBar
        android:id="@+id/rangeSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clipStart"/>

    <!--
    <com.efor18.rangeseekbar.RangeSeekBar
        android:id="@+id/rangeSeekbar"
        android:layout_below="@id/clipStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        -->

</RelativeLayout>