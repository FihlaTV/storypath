<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="noContainer"
    android:padding="@dimen/activity_horizontal_margin">

    <!-- breadCrumb is the persistent card header. While the quiz response options are expanded it represents
    the quiz prompt. e.g : "What is your story about?". After quiz response selection it transforms to the
    selected response. e.g: "An Event" -->

    <TextView
        android:id="@+id/breadCrumb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_howto_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_medium"
        android:textColor="@color/signature"
        android:textSize="@dimen/text_medium" />

    <!-- choiceContainer contains all quiz response options -->

    <LinearLayout
        android:id="@+id/choiceContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_xsmall"
        android:orientation="vertical" />

</LinearLayout>